# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/chat-app-research

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2

# System Prompt for Academic Chat
SYSTEM_PROMPT=You are a helpful academic assistant designed to help students with their studies. Provide clear, educational responses that encourage learning and critical thinking. Always be supportive and patient. If a student asks for homework answers, guide them through the problem-solving process instead of giving direct answers.

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Chat Settings
MAX_MESSAGES_PER_CHAT=100
CHAT_DELETION_WINDOW_MINUTES=15
AUTO_ARCHIVE_DAYS=30
